doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Register | Yama
        link(rel="stylesheet" href="/css/style.css")
    body
        header.header-nav
            img.logo(src="/pictures/logo.png", alt="Yama Logo")
            nav.menu
                a.menu-item(href="/home") Home
                a.menu-item(href="/login") Log In

        main.register-container
            h1 SIGN UP
            if query.error
                .error-message #{query.error}
            form.register-form(method="POST", action="/register")
                .form-group
                    label(for="username") Username
                    input#username(type="text", name="username", required=true)
                .form-group
                    label(for="email") Email
                    input#email(type="email", name="email", required=true)
                .form-group
                    label(for="password") Password
                    input#password(type="password", name="password", required=true, minlength=8)
                .form-group
                    label(for="name") Name
                    input#name(type="text", name="name", required=true)
                .form-group
                    label(for="gender") Gender
                    select#gender(name="gender", required=true)
                        option(value="") Select...
                        option(value="male") Male
                        option(value="female") Female
                        option(value="other") Other
                .form-group
                    label(for="orientation") Orientation
                    select#orientation(name="orientation", required=true)
                        option(value="") Select...
                        option(value="straight") Straight
                        option(value="gay") Gay
                        option(value="bisexual") Bisexual
                        option(value="other") Other
                .form-group
                    label(for="age") Age
                    input#age(type="number", name="age", required=true, min=18)
                .form-group
                    button.button(type="submit") Register

        footer
            .footer-content
                .links
                    a(href="/info").footer-link Information
                    a(href="/social").footer-link Social Media

            .copy
                p &copy; 2024 Yama. All rights reserved.
